
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Admin", "Index", "Index", new { area = "Admin" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Home
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Sách", "Index", "tblSaches")</li>
                            <li>@Html.ActionLink("Thể loại", "Index", "tblTheLoais")</li>
                            <li>@Html.ActionLink("Tác giả", "Index", "tblTacGias")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Phiếu
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Phiếu Nhập", "Index", "tblPhieuNhaps")</li>
                            <li>@Html.ActionLink("Phiếu xuất", "Index", "tblPhieuXuats")</li>
                            <li>@Html.ActionLink("CT Phiếu nhập", "Index", "tblCTPhieuNhaps")</li>
                            <li>@Html.ActionLink("CT Phiếu xuất", "Index", "tblCTPhieuXuats")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Nhà xuất bản", "Index", "tblNXBs")</li>
                    <li>@Html.ActionLink("Nhà cung cấp", "Index", "tblNCCs")</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "tblKhachHangs")</li>
                    <li>@Html.ActionLink("Nhân viên", "Index", "tblNhanViens")</li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Người dùng
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @if (Session["User"] != null)
                            {
                                <li>@Session["LogedUserFullname"]</li>
                                <li>@Html.ActionLink("Đăng xuất", "Dangxuat", "Home", new { area = ""}, null)</li>
                            }
                            

                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

