<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NHÀ SÁCH", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Thể loại
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Sách giáo khoa", "SGK", "Theloai")</li>
                            <li>@Html.ActionLink("Truyện ma", "MA", "Theloai")</li>
                            <li>@Html.ActionLink("Sách thiếu nhi", "THIEUNHI", "Theloai")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Tác giả
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("nam", "tg1", "TacGia")</li>
                            <li>@Html.ActionLink("hoang", "tg2", "TacGia")</li>
                            <li>@Html.ActionLink("long", "tg3", "TacGia")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Người dùng
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @if (Session["User"] != null)
                            {
                                <li>@Session["LogedUserFullname"]</li>
                                <li>@Html.ActionLink("Đăng xuất", "Dangxuat", "Home")</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink("Đăng nhập", "Login", "Home")</li>
                                <li>@Html.ActionLink("Đăng kí", "DangKy", "Home")</li>
                            }

                        </ul>
                    </li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Giỏ Hàng", "XemGioHang", "GioHang")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="background-color: #222; color: #9d9797;">
            <div class="thongtin">
                <p>THÔNG TIN LIÊN HỆ</p>
            </div>
            <div class="lienhe">
                <p>Tên: Trần Thành Nam.</p>
                <p>Địa chỉ: Long Bình, Quận 9, Tp.HCM.</p>
                <p>Số điện thoại: 0123456789.</p>
                <p>Email: Namtt1998@gmail.com.</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
